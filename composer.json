{
    "name": "pokemongo-api/pogo-api",
    "description": "Pokemon GO Pokedex and Raid API",
    "license": "proprietary",
    "require": {
        "php": "~8.5.0",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-simplexml": "*",
        "cuyz/valinor": "^2.3",
        "guzzlehttp/guzzle": "^7.10.0",
        "psr/log": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "PokemonGoApi\\PogoAPI\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Unit\\PokemonGoApi\\PogoAPI\\": "tests/Unit",
            "Tests\\Integration\\PokemonGoApi\\PogoAPI\\": "tests/Integration"
        }
    },
    "require-dev": {
        "doctrine/coding-standard": "^12.0",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpunit/phpunit": "^12.5",
        "roave/security-advisories": "dev-master",
        "infection/infection": "^0.31",
        "league/openapi-psr7-validator": "^0.16",
        "rector/rector": "^2.2"
    },
    "scripts": {
        "ci": [
            "@cs-check",
            "@phpstan",
            "@phpunit"
        ],
        "api-build": [
            "php bin/console.php",
            "rm -rf public/api",
            "cp -r data/tmp/api public/"
        ],
        "convert-svg": "./bin/convert-images.sh",
        "cs-check": "phpcs -s",
        "cs-fix": "phpcbf",
        "phpstan": "phpstan analyse --memory-limit 512M",
        "phpunit": "phpunit",
        "rector": "rector",
        "infection": [
            "@putenv XDEBUG_MODE=coverage",
            "infection --only-covered"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "infection/extension-installer": true
        }
    }
}
